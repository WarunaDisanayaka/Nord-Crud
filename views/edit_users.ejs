<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Edit user (<%= user.name  %> )</h1>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-6">
            <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Name</label>
                  <input type="text" name="name" value="<%= user.name %> " class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email</label>
                  <input type="email" name="email" value="<%= user.email %> " class="form-control" id="exampleInputPassword1">
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Phone</label>
                    <input type="text" name="phone" value="<%= user.phone %> " class="form-control" id="exampleInputPassword1">
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Image</label>
                    <input class="form-control" name="image" type="file" id="formFile">
                    <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1" alt="" srcset="">
                </div>
                <input type="hidden" name="old_image" value="<%= user.image %> ">
                <button type="submit" class="btn btn-primary">Update</button>
              </form> 
        </div> 
    </div>
</div>



<%- include('layout/footer') %>